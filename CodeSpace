// Add this link where appropriate:
{(user?.role === 'admin' || user?.role === 'staff') && (
  <Link href="/kitchen">
    <a className="flex items-center px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg">
      <span className="mr-2">ߍ</span>
      Kitchen Display
    </a>
  </Link>
)}
```

