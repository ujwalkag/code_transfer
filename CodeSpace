ubuntu@hotel-management-server:~$ cat /etc/systemd/system/gunicorn.service
[Unit]
Description=gunicorn daemon for hotel-management-backend
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/hotel-management-backend
ExecStart=/home/ubuntu/hotel-management-backend/venv/bin/gunicorn --workers 3 --bind 127.0.0.1:8000 config.wsgi:application

[Install]
WantedBy=multi-user.target
