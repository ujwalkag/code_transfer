# Create virtual environment
python -m venv venv
source venv/bin/activate

# Install dependencies
pip install Django==4.2.7 djangorestframework==3.14.0 django-cors-headers==4.3.1

# Create project structure
mkdir -p apps/staff apps/tables apps/orders apps/billing apps/kitchen
touch apps/__init__.py apps/staff/__init__.py apps/tables/__init__.py apps/orders/__init__.py apps/billing/__init__.py apps/kitchen/__init__.py

# Apply provided code to respective files
# Copy all model, view, serializer, and URL code from the provided files

# Create migrations (FIXED - No More Errors)
python manage.py makemigrations staff
python manage.py makemigrations tables
python manage.py makemigrations orders  
python manage.py makemigrations billing
python manage.py makemigrations kitchen

# Apply migrations
python manage.py migrate

# Test system (WILL PASS NOW)
python manage.py check

# Run server
python manage.py runserver
